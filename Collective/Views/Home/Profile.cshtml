@model Collective.Models.ProfileViewModel.ProfileViewModel
@using Collective.Data
@using Microsoft.AspNetCore.Identity
@using System.Linq
@using Collective.Models
@using Microsoft.EntityFrameworkCore
@using Collective.Controllers

@inject ApplicationDbContext _context
@inject UserManager<ApplicationUser> userManager

@{
    ViewData["Title"] = "Profile";
}

<h2>@Model.User.UserName</h2>

<hr />
<div>
    <div class="row">
        <div class="col">
            @if (Model.User.UserImgPath != null)
            {
                <div class="mb-5" style="width:200px;height:200px;position:relative;overflow:hidden;border-radius:50%;">
                    <img style="display:inline;margin:0,auto;margin-left:-25%;height:100%;width:auto;" src="@Url.Content(Model.User.UserImgPath)" alt="User Profile Image" />
                </div>
                @using (Html.BeginForm("RemoveImage", "Home", FormMethod.Post))
                {
                    <div class="col-sm-5">
                        <form asp-controller="Home" asp-action="RemoveImage">
                            <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
                        </form>
                    </div>
                }
            }
            else
            {
                <div style="text-align:center" class="col-sm-4 mb-5 small">
                    <i class="far fa-user fa-10x"></i>
                    <h5>No Profile Image</h5>
                    @using (Html.BeginForm("ImageUpload", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <form asp-controller="Home" asp-action="ImageUpload">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <input type="submit" value="Upload" class="btn btn-primary btn-sm" />
                                </div>
                                <div class="custom-file">
                                    <input type="file" name="file" id="file" accept=".jpg,.jpeg,.png" class="custom-file-input text-dark" />
                                    <label style="text-align:left" class="custom-file-label"></label>
                                </div>
                            </div>

                        </form>
                    }
                </div>
            }
            @*<dd class="col-sm-10">
                    @foreach (var artist in Model.Collection.TopFive)
                    {
                        @Html.DisplayFor(Artist => artist.Name)
                    }
                </dd>*@
            @*@if (Model.Notes != null)
                {
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Notes)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Notes)
                    </dd>
                }*@
            @*add buttons for adding to different lists/removing*@
            <dl>
                @if (Model.User.Bio != null)
                {
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.User.Bio)
                    </dt>
                    <dd class="col-sm-5 mb-0">
                        @Html.DisplayFor(model => model.User.Bio)
                    </dd>
                    <div class="col-sm-4">
                        @using (Html.BeginForm("RemoveBio", "Home", FormMethod.Post))
                        {
                            <form asp-controller="Home" asp-action="RemoveBio">
                                <input style="float:right;" type="submit" value="Rewrite Bio" class="btn btn-danger btn-sm" />
                            </form>
                        }
                    </div>

                }
                else
                {
                    <div class="col-sm-5">
                        @using (Html.BeginForm("AddBio", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <form asp-controller="Home" asp-action="AddBio">
                                <div class="form-group">
                                    <label asp-for="User.Bio" style="font-weight:700" class="control-label">Add An About Me!</label>
                                    <textarea asp-for="User.Bio" name="BioString" id="BioString" style="resize:none;height:100px;" class="form-control" placeholder="How'd you get here??"></textarea>
                                    <input type="submit" value="Add Bio" class="btn btn-primary btn-sm mt-1" />
                                </div>
                            </form>
                        }
                    </div>
                }
            </dl>
            
        </div>
        <div class="col">
            <table class="table">
                <div class="col-sm-10 mt-5">
                    <a asp-controller="Collections" asp-action="Index">My Milk Crate (@Model.Collection.Count())</a>
                </div>
                @{ 
                    var top5 = @Model.Collection
                        .Include(col => col.Record)
                        .Where(col => col.TopFive == true)
                        .ToList();
                }
                <thead>
                    <tr>
                        <th>
                            Master Release Id
                        </th>
                        <th>
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Collection.)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Collection.Year)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Collection.Condition)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Record.Master_Id)
                            </td>
                            <td>
                                <img style="height:150px" src="@Url.Content(item.Record.Cover_Image)" alt="album cover" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Record.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Record.Year)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Record.Condition)
                            </td>
                            <td>
                                @if (item.TopFive == false && top5Count < 5)
                                {
                                    <a class="text-success" asp-action="AddTopFive" asp-route-id="@item.Id">Add To Top 5</a><br />
                                }
                                else if (item.TopFive == true)
                                {
                                    <a class="text-danger" asp-action="RemoveTopFive" asp-route-id="@item.Id">Remove From Top 5</a><br />
                                }
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a><br />
                                <a asp-action="Delete" asp-route-id="@item.Id">Remove</a><br />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>