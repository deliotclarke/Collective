@model Collective.Models.Record

@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div>
                <h5>Add ${Model.Title} by ${Model.Artist} to your Collection?</h5>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Catno" class="form-control" />
            </div>
            <div type="hidden" class="form-group">
                <input type="hidden" asp-for="Thumb" class="form-control" />
            </div>
            <div type="hiddden" class="form-group">
                <input type="hidden" asp-for="Cover_Image" class="form-control" />
            </div>
            <div type="hiddden" class="form-group">
                <input type="hidden" asp-for="Artist" class="form-control" />
            </div>
            <div type="hiddden" class="form-group">
                <input type="hidden" asp-for="Title" class="form-control" />
            </div>
            <div type="hiddden" class="form-group">
                <input type="hidden" asp-for="Year" class="form-control" />
            </div>
            <div type="hiddden" class="form-group">
                <input type="hidden" asp-for="Condition" class="form-control" />
            </div>
            <div type="hiddden" class="form-group">
                <input type="hidden" asp-for="Lowest_Price" class="form-control" />
            </div>
            <div type="hiddden" class="form-group">
                <input type="hidden" asp-for="TrackList" class="form-control" />
            </div>
            <div type="hiddden" class="form-group">
                <input type="hidden" asp-for="Master_Url" class="form-control" />
            </div>
            <div type="hiddden" class="form-group form-check">
                    <input type="hidden" class="form-check-input" asp-for="Owned" /> @Html.DisplayNameFor(model => model.Owned)
            </div>
            <div type="hiddden" class="form-group form-check">
                    <input type="hidden" class="form-check-input" asp-for="TopFive" /> @Html.DisplayNameFor(model => model.TopFive)
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Search</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
