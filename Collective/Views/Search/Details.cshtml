@model Collective.Models.DiscogsMasterSearch

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>DiscogsMasterSearch</h4>
    <hr />
    <div class="row">
        @if (Model.ImageUrl != null)
        {
            <img class="col-sm mb-4" src="@Url.Content(Model.ImageUrl)" alt="Album Thumb" />
        }
        <br />
        <dl class="col-sm">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Num_For_Sale)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Num_For_Sale)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Main_Release_Url)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Main_Release_Url)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Year)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Year)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Resource_Url)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Resource_Url)
            </dd>
        </dl>
        // add buttons for adding to different lists/removing
    </div>
</div>
<div>
    <a class="col-sm" asp-action="Index">Back to Search</a>
</div>
